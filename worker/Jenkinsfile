pipeline {
    agent any

    tools{
      maven 'Maven 3.6.1'
    }


    stages {
        stage('build') {
            steps {
                echo 'Compile'
                dir['worker'] {
                  sh 'mvn compile'
                }
            }
        }
        stage('test') {
            steps {
                echo 'Test'
            }
        }
        stage('package') {
            steps {
                echo 'Package'
            }
        }
    }
    post {
        always {
            echo 'This pipeline is completed'
        }
    }
}
