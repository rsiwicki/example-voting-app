pipeline {
    agent any

    tools{
      maven 'Maven 3.6.1'
    }


    stages {
        stage('build') {
            steps {
                dir('worker') {
                  sh 'mvn compile'
                }
            }
        }
        stage('test') {
            steps {
              dir('worker') {
                sh 'mvn clean test'
              }
            }
        }
        stage('package') {

            steps {
              dir('worker') {
                sh 'mvn package -DskipTests'
            }
          }
        }
    }

    post {
        always {
            archiveArtifacts artifacts: '**/target/*.jar', fingerprint: true
            echo 'This pipeline is completed now'
        }
    }
}
